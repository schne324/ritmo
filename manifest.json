{
  "manifest_version": 2,
  "name": "Ritmo",
  "description": "Change playback rate of HTML5 audio and video content.  Speed it up or slow it down!",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "activeTab"
  ]
}
